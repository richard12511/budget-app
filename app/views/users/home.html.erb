<% provide(:title, @user.name) %>

<h1>Welcome, <%= @user.name %></h1>
<hr />

<div class="row">
	<div class="col-md-12">
		<table>
			<thead>
				<tr>
					<th>Id</th>
					<th>Date</th>
					<th>Remarks</th>
					<th>Amount</th>
				</tr>
			</thead>
			<tbody>
				<% @user.debits.each do |debit| %>
					<tr>
						<td><%= link_to debit.id, debit %></td>
						<td><%= debit.created_at.strftime("%m/%d/%Y") %></td>
						<td><%= debit.remarks %></td>
						<td><%= number_to_currency(debit.amount, precision: 2) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
