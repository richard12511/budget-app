<% provide(:title, 'All Users') %>
<h2>All Users</h2>
<hr />
<div class="col-md-12">
	<table id="users-table" class="table table-striped table-bordered table-condensed display compact table-hover">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Email</th>
				<th>Admin?</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= link_to user.id, user %></td>
					<td><%= user.name %></td>
					<td><%= user.email %></td>
					<td><%= user.admin %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
</div>

<script type="text/javascript">
	$(document).ready(function() {
	  $('#users-table').DataTable({
		  info: false,
		  lengthChange: false,
		  searching: true,
		  order: [[0, "asc"]],
		  pageLength: 10
	  });
	});
</script>
